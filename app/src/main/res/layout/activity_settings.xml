<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activities.SettingsActivity">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">



      </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/popins"
            android:includeFontPadding="false"
            android:text="Shubham Raut"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/popins"
            android:includeFontPadding="false"
            android:text="shubhamraut.scoe.comp@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/darkergrey"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_for_cardview_on_dashboard"
            android:gravity="center_vertical"
            android:paddingStart="15dp">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/profile"
                app:tint="@color/dark" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profileImg"
                android:fontFamily="@font/popins"
                android:includeFontPadding="false"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settingLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_for_cardview_on_dashboard"
            android:gravity="center_vertical"
            android:paddingStart="15dp">

            <ImageView
                android:id="@+id/settingImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/settings" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/settingImg"
                android:fontFamily="@font/popins"
                android:includeFontPadding="false"
                android:text="Setting"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contactLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_for_cardview_on_dashboard"
            android:gravity="center_vertical"
            android:paddingStart="15dp">

            <ImageView
                android:id="@+id/contactImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/mail"
                app:tint="@color/dark" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/contactImg"
                android:fontFamily="@font/popins"
                android:includeFontPadding="false"
                android:text="Contact"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shareLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_for_cardview_on_dashboard"
            android:gravity="center_vertical"
            android:paddingStart="15dp">

            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/share"
                app:tint="@color/dark" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/shareImg"
                android:fontFamily="@font/popins"
                android:includeFontPadding="false"
                android:text="Share App"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/helpLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_for_cardview_on_dashboard"
            android:gravity="center_vertical"
            android:paddingStart="15dp">

            <ImageView
                android:id="@+id/helpImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/help"
                app:tint="@color/dark" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/helpImg"
                android:fontFamily="@font/popins"
                android:includeFontPadding="false"
                android:text="Help"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrowright" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>